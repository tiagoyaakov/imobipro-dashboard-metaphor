# =====================================================
# MODO DE AUTENTICAÇÃO
# =====================================================

# Ativar autenticação real (true) ou mock (false)
VITE_USE_REAL_AUTH=true

# Configurações do Supabase
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_PROJECT_ID=your_project_id_here

# Database URL (para desenvolvimento)
DATABASE_URL=postgresql://postgres:password@db.project-ref.supabase.co:5432/postgres

# URL de redirect para autenticação
# Desenvolvimento:
# VITE_SUPABASE_AUTH_REDIRECT_URL=http://localhost:5173/auth/callback
# Produção:
# VITE_SUPABASE_AUTH_REDIRECT_URL=https://your-domain.vercel.app/auth/callback
VITE_SUPABASE_AUTH_REDIRECT_URL=http://localhost:5173/auth/callback

# Debug em produção (temporário - remover após resolver)
VITE_DEBUG_AUTH=true

# =====================================================
# APLICAÇÃO - Configurações Gerais
# =====================================================

# Tema padrão
VITE_DEFAULT_THEME=dark

# Cor primária
VITE_PRIMARY_COLOR=#0EA5E9

# Localização
VITE_DEFAULT_LOCALE=pt-BR
VITE_TIMEZONE=America/Sao_Paulo

# Ambiente
NODE_ENV=development
